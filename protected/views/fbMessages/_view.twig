<div class="view">
	<br /><br />
	<b style="width: 160px;display: inline-block;padding-left: 40px;">{{ model.getAttributeLabel('label') }}:</b>
	{{ model.label }}
	<br />

	<b style="width: 160px;display: inline-block;padding-left: 40px;">{{ model.getAttributeLabel('sender') }}:</b>
	{{ model.sender }}
	<br />
	<br />

	<b style="width: 160px;display: inline-block;padding-left: 40px;">{{ model.getAttributeLabel('message') }}:</b><br />
	<div style="background: #ECECEC;margin-left: 40px;padding: 10px 40px;border-radius: 4px;border: 1px solid #D3D3D3;">{{ model.message | raw }}</div>
	<br />

	<b style="width: 160px;display: inline-block;padding-left: 40px;">{{ model.getAttributeLabel('send_date') }}:</b>
	{{ model.send_date }}
	<br />

	<b style="width: 160px;display: inline-block;padding-left: 40px;">{{ model.getAttributeLabel('status') }}:</b>
	{{ model.status }}
	<br />


