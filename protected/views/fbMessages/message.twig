{% extends "views/layouts/messages.twig" %}

{% block message %}
	{% if type == 'success' %}
		<div style="
		color: #468847;
		background-color: #dff0d8;
		border-color: #d6e9c6;
		padding: 8px 35px 8px 14px;
		text-shadow: 0 1px 0 rgba(255, 255, 255, 0.5);
		border: 1px solid #fbeed5;
		-webkit-border-radius: 4px;
		-moz-border-radius: 4px;
		border-radius: 4px;">{{ message }}</div>
	{% endif %}
	{% if type == 'error' %}
		<div style="
		color: #b94a48;
		background-color: #f2dede;
		border-color: #eed3d7;
		padding: 8px 35px 8px 14px;
		text-shadow: 0 1px 0 rgba(255, 255, 255, 0.5);
		border: 1px solid #fbeed5;
		-webkit-border-radius: 4px;
		-moz-border-radius: 4px;
		border-radius: 4px;">{{ message }}</div>
	{% endif %}

{% endblock %}