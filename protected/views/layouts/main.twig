	<script type="text/javascript" src="{{ App.baseUrl }}/scripts/slides.min.jquery.js"></script>
	<script type="text/javascript">
		$(function(){
			if($('#slides') != undefined){
                $('#slides').slides({
    				preload:false,
    				play: 5000,
    				pause: 2500,
    				effect: 'fade',
    				hoverPause: true
